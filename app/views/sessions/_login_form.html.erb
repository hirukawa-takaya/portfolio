<%= form_for(:session, url: login_path) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
<%= f.submit "ログイン", class: 'btn-block' %>
<% end %>
<%= link_to 'Sign Upはこちら', new_user_path %>