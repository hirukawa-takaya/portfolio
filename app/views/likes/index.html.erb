<div class="topic-index-wrapper">
  <div class="container">
    <% @like_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">

            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>

            <div class="descript">
              <% if topic.password_digest.nil? %>
                <% if topic.image_path.url %>
                  <%= link_to topic_path(topic) do %>
                    <%= image_tag topic.image_path.url %>
                  <% end %>
                <% end %>

              <% else %>

                <%= link_to "/topic_password/#{topic.id}", id: topic.id do %>
                  <%= image_tag "password.jpg" %>
                <% end %>
              <% end %>
            </div>

            <div id="likes_buttons_<%= topic.id %>">
              <ul class="comments-likes">
                <li><i class="far fa-comment-dots like-btn"></i></li>
                <li><%= render partial: 'like', locals: { topic: topic} %></li>
                <li><%= topic.like_users.count %></li>
              </ul>
            </div>

            <div class="descript">
              <%= link_to topic_path(topic) do %>
                <% if topic.password_digest.nil? %>
                  <p class="topic-text">
                    <%= topic.description %>
                  </p>
                <% else %>
                  <p class="topic-text">
                    <%= link_to "secret", "/topic_password/#{topic.id}", id: topic.id %>
                  </p>
                <% end %>

                <div class="text-right" >
                  <%= l topic.created_at %>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      <%= paginate @like_topics %>
    </div>

  </div>
</div>