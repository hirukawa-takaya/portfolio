<% comments.each do |c| %>
 <div class="secondary-comment">
    <div class="name-created comment-clear">
      <div class="text-left">@<%= link_to c.user.name, user_path(c.user_id) %></div>
      <div class="text-right"><%= l c.created_at %></div>
    </div>
    <div class="comment-content">
      <%= c.content %>
    </div>
    <% if current_user == c.user %>
      <div class="text-right border-bottom"><%= link_to "削除", topic_comment_path(c.topic_id, c.id), method: :delete, remote: true, class: "destroy-comment" %></div>
    <% end %>
  </div>
  <hr>
<% end %>