<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">

          <h2 class="topic-author">
            <%= @topic.user.name %>
          </h2>

          <% if @topic.image_path.url %>
            <%= image_tag @topic.image_path.url %>
          <% end %>
 
          <i class="far fa-comment-dots like-btn"></i>

          <% if logged_in? %>
            <% if !@topic.like_users.include?(current_user) %>
              <%= link_to likes_path(topic_id: @topic.id), method: :post do %>
                <i class="far fa-heart like-btn" ></i>
              <% end %>
            <% else %>
              <%= link_to likes_path(topic_id: @topic.id), method: :delete do %>
                <i class="fas fa-heart unlike-btn"></i>
              <% end %>
            <% end %>
            <%= @topic.like_users.count %>
          <% else %>
            <% if !@topic.like_users.include?(current_user) %>
              <i class="far fa-heart like-btn" ></i>
            <% else %>
              <i class="fas fa-heart unlike-btn"></i>
            <% end %>
            <%= @topic.like_users.count %>
          <% end %>

          <p class="topic-text">
            <%= @topic.description %>
          </p>

          <div class="text-right" >
            <%= l @topic.created_at %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>