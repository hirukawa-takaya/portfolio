<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">

          <h2 class="topic-author">
            <%= @topic.user.name %>
          </h2>

          <% if @topic.image_path.url %>
            <%= image_tag @topic.image_path.url %>
          <% end %>
 
          <i class="far fa-comment-dots like-btn"></i>

            <% if !@topic.like_users.include?(current_user) %>
              <%= link_to likes_path(topic_id: @topic.id), method: :post, remote: true do %>
                <i class="far fa-heart like-btn" ></i>
              <% end %>
            <% else %>
              <%= link_to likes_path(topic_id: @topic.id), method: :delete, remote: true do %>
                <i class="fas fa-heart unlike-btn"></i>
              <% end %>
            <% end %>
            <%= @topic.like_users.count %>

          <p class="topic-text">
            <%= @topic.description %>
          </p>

          <div class="text-left" >
            <%= l @topic.created_at %><br>
          </div>

          <% if logged_in? %>
            <% if @topic.user_id == current_user.id %>
            <div class="text-right" >
              <%= link_to '削除', "#{@topic.id}/destroy", method: :delete %>
            </div>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>