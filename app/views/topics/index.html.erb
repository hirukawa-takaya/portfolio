<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <div class="card">
              <% if topic.password_digest.nil? %>
              <% if topic.image_path.url %>
                <%= link_to topic_path(topic) do %>
                  <%= image_tag topic.image_path.url %>
                <% end %>
              <% end %>
              <% else %>
              <%= link_to topic_passwords_path do %>
                <%= image_tag "password.jpg" %>
                <% end %>
              <% end %>
            </div>
              <i class="far fa-comment-dots like-btn"></i>
              <% if !topic.like_users.include?(current_user) %>
                <%= link_to likes_path(topic_id: topic.id), method: :post do %>
                  <i class="far fa-heart like-btn" ></i>
                <% end %>
              <% else %>
                <%= link_to likes_path(topic_id: topic.id), method: :delete do %>
                  <i class="fas fa-heart unlike-btn"></i>
                <% end %>
              <% end %>
              <%= topic.like_users.count %>
              <div class="card">
                <%= link_to topic_path(topic) do %>
              <% if topic.password_digest.nil? %>
              <p class="topic-text">
                <%= topic.description %>
              </p>
              <% else%>
                <p class="topic-text">
                <%= link_to "secret", topic_passwords_path %>
                </p>
              <% end %>
                <div class="text-right" >
                  <%= l topic.created_at %>
                </div>
                <% end %>
              </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="text-center">
      <%= paginate @topics %>
    </div>
  </div>
</div>